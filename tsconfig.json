{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/App.jsx", "src/services/planesEstudioService.ts", "src/services/estadisticasService.ts", "src/services/api.js", "src/router.jsx", "src/hooks/usePersistentState.ts", "src/hooks/useUserRole.js", "src/components/Modal.jsx", "src/app/layout.tsx", "src/app/auth/page.jsx"],
  "exclude": ["node_modules"]
}
